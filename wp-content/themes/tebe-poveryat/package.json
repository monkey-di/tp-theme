{
  "name": "tebe-poveryat-theme",
  "version": "1.0.0",
  "description": "WordPress theme with Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "copy-assets": "cp node_modules/swiper/swiper-bundle.min.js assets/vendor/swiper/ && cp node_modules/swiper/swiper-bundle.min.css assets/vendor/swiper/",
    "build": "npm run copy-assets && npx @tailwindcss/cli -i ./src/input.css -o ./assets/css/output.css --minify",
    "dev": "npm run copy-assets && npx @tailwindcss/cli -i ./src/input.css -o ./assets/css/output.css --watch"
  },
  "keywords": [
    "wordpress",
    "theme",
    "tailwindcss"
  ],
  "author": "monkey-di",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0-alpha.14",
    "tailwindcss": "^4.0.0-alpha.14"
  },
  "dependencies": {
    "swiper": "^11.0.0"
  }
}